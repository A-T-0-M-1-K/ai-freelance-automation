{
  "$schema": "https://ai-freelance-automation/schema/v1/model_config.json",
  "model_id": "translation_en_ru_v3",
  "task_type": "translation",
  "source_language": "en",
  "target_language": "ru",
  "provider": "openai",
  "model_name": "gpt-4o-mini",
  "fallback_models": [
    {
      "provider": "google",
      "model_name": "gemini-1.5-flash"
    },
    {
      "provider": "local",
      "model_name": "Helsinki-NLP/opus-mt-en-ru",
      "device": "cuda:0",
      "quantization": "int8"
    }
  ],
  "quality_tier": "professional",
  "max_input_tokens": 8192,
  "max_output_tokens": 2048,
  "temperature": 0.3,
  "top_p": 0.9,
  "presence_penalty": 0.1,
  "frequency_penalty": 0.1,
  "timeout_seconds": 120,
  "retry_policy": {
    "max_retries": 3,
    "backoff_factor": 2.0,
    "retry_on": ["timeout", "rate_limit", "network_error"]
  },
  "postprocessing": {
    "enable_grammar_check": true,
    "enable_style_adaptation": true,
    "formality_level": "neutral",
    "preserve_formatting": true,
    "detect_and_fix_code_blocks": true
  },
  "cost_estimation": {
    "input_token_cost_usd": 0.00000015,
    "output_token_cost_usd": 0.0000006,
    "currency": "USD"
  },
  "compliance": {
    "gdpr_compliant": true,
    "data_retention_days": 7,
    "log_inputs": false,
    "anonymize_entities": true
  },
  "performance_profile": {
    "priority": "high",
    "cache_ttl_seconds": 3600,
    "enable_prefetch": true
  },
  "metadata": {
    "version": "3.2.1",
    "created_at": "2026-01-25T00:00:00Z",
    "author": "AI Freelance Automation System",
    "description": "High-accuracy English-to-Russian translation model for professional content (transcripts, articles, client messages). Optimized for fluency, terminology consistency, and cultural adaptation."
  }
}