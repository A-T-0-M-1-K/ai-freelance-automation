{
  "$schema": "https://schemas.ai-freelance-automation.com/v1/translation-config.schema.json",
  "version": "1.3.0",
  "enabled": true,

  "default_language_pair": {
    "source": "auto",
    "target": "en"
  },

  "supported_languages": [
    "af", "am", "ar", "as", "az", "ba", "be", "bg", "bn", "bo", "br", "bs", "ca", "cs", "cy", "da", "de", "dv", "el", "en", "es", "et", "eu", "fa", "fi", "fo", "fr", "gl", "gu", "ha", "he", "hi", "hr", "hu", "hy", "id", "is", "it", "ja", "jv", "ka", "kk", "km", "kn", "ko", "ku", "ky", "la", "lb", "lo", "lt", "lv", "mg", "mi", "mk", "ml", "mn", "mr", "ms", "mt", "my", "ne", "nl", "no", "ny", "or", "pa", "pl", "ps", "pt", "ro", "ru", "sa", "sd", "si", "sk", "sl", "sm", "sn", "so", "sq", "sr", "st", "su", "sv", "sw", "ta", "te", "tg", "th", "tk", "tl", "tr", "tt", "ug", "uk", "ur", "uz", "vi", "xh", "yi", "yo", "zh", "zu"
  ],

  "quality_tiers": {
    "standard": {
      "model_priority": ["google_translate", "libretranslate", "local_nllb"],
      "max_latency_sec": 8,
      "min_confidence_threshold": 0.75,
      "post_editing_enabled": false
    },
    "premium": {
      "model_priority": ["openai_gpt4o", "anthropic_claude_opus", "google_palm2"],
      "max_latency_sec": 20,
      "min_confidence_threshold": 0.92,
      "post_editing_enabled": true,
      "style_preservation": true,
      "terminology_glossary_support": true
    },
    "enterprise": {
      "model_priority": ["custom_finetuned_nllb_3B", "aws_translate_custom", "azure_custom_translator"],
      "max_latency_sec": 30,
      "min_confidence_threshold": 0.96,
      "post_editing_enabled": true,
      "style_preservation": true,
      "terminology_glossary_support": true,
      "client_specific_models": true
    }
  },

  "fallback_strategy": {
    "enable_cascading": true,
    "max_retries_per_provider": 2,
    "skip_on_error_codes": [429, 503],
    "use_offline_model_if_all_fail": true,
    "offline_model_path": "models/nllb-200-distilled-1.3B"
  },

  "performance": {
    "enable_batching": true,
    "max_batch_size": 16,
    "batch_timeout_ms": 500,
    "cache_results": true,
    "cache_ttl_hours": 24,
    "prefetch_common_pairs": ["en-ru", "en-es", "en-de", "zh-en", "ar-en"]
  },

  "compliance": {
    "gdpr_compliant": true,
    "data_never_stored": true,
    "pii_redaction_enabled": true,
    "log_translation_metadata_only": true
  },

  "monitoring": {
    "emit_metrics": true,
    "track_quality_score": true,
    "log_latency_percentiles": [50, 90, 99],
    "alert_on_quality_drop": 0.85
  },

  "providers": {
    "openai_gpt4o": {
      "enabled": true,
      "model": "gpt-4o",
      "temperature": 0.1,
      "max_tokens": 4096
    },
    "anthropic_claude_opus": {
      "enabled": true,
      "model": "claude-3-opus-20240229",
      "temperature": 0.2
    },
    "google_translate": {
      "enabled": true,
      "api_version": "v2"
    },
    "libretranslate": {
      "enabled": true,
      "endpoint": "http://localhost:5000/translate",
      "timeout_sec": 10
    },
    "local_nllb": {
      "enabled": true,
      "model_name": "facebook/nllb-200-distilled-600M",
      "device": "auto"
    }
  }
}