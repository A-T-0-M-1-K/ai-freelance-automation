{
  "theme_name": "Blue Theme",
  "theme_id": "blue_theme",
  "version": "1.0.0",
  "author": "AI Freelance Automation System",
  "description": "Professional dark-blue theme optimized for productivity and visual clarity.",
  "colors": {
    "primary": "#2563eb",
    "primary_variant": "#1d4ed8",
    "secondary": "#60a5fa",
    "accent": "#38bdf8",
    "background": "#0f172a",
    "surface": "#1e293b",
    "error": "#ef4444",
    "warning": "#f59e0b",
    "success": "#22c55e",
    "info": "#0ea5e9",
    "text_primary": "#f1f5f9",
    "text_secondary": "#cbd5e1",
    "text_disabled": "#64748b",
    "border": "#334155",
    "divider": "#475569"
  },
  "typography": {
    "font_family": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
    "font_size_base": "14px",
    "font_weight_normal": 400,
    "font_weight_medium": 500,
    "font_weight_bold": 700,
    "line_height": 1.5
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px"
  },
  "border_radius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.2)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3)"
  },
  "transitions": {
    "fast": "150ms ease-in-out",
    "normal": "300ms ease-in-out",
    "slow": "500ms ease-in-out"
  },
  "states": {
    "hover": {
      "brightness": "1.1"
    },
    "active": {
      "brightness": "0.95"
    },
    "disabled": {
      "opacity": 0.5
    }
  },
  "compatibility": {
    "min_ui_version": "2.0.0",
    "supports_dark_mode": true,
    "supports_high_contrast": false
  }
}