{
  "name": "low_resource",
  "description": "Профиль для устройств с ограниченными ресурсами (ноутбуки без дискретной видеокарты)",
  "ai": {
    "embedding_model": "distilbert-base-multilingual-cased",
    "textgen_model": "gpt2",
    "translation_model": "facebook/nllb-200-distilled-600M",
    "whisper_model": "openai/whisper-tiny",
    "quantization": "int4",
    "device": "auto",
    "max_concurrent_models": 1,
    "cache_results": true,
    "batch_processing": true,
    "cpu_optimization": true,
    "memory_saver": true
  },
  "performance": {
    "memory_limit_gb": 3.0,
    "use_disk_cache": true,
    "disk_cache_size_gb": 1.0,
    "aggressive_gc": true,
    "background_tasks_limit": 1,
    "max_queue_size": 3
  },
  "automation": {
    "max_concurrent_jobs": 1,
    "task_queue_size": 3,
    "auto_pause_on_low_memory": true,
    "low_memory_threshold_percent": 85,
    "skip_heavy_tasks": true,
    "use_cloud_fallback": false
  },
  "monitoring": {
    "resource_check_interval": 10,
    "auto_throttle": true,
    "throttle_threshold_percent": 80
  }
}