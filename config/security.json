{
  "version": "1.0",
  "last_updated": "2026-01-25T00:00:00Z",
  "encryption": {
    "data_at_rest": {
      "algorithm": "AES-256-GCM",
      "key_derivation": "HKDF-SHA256",
      "key_length_bits": 256,
      "nonce_size_bytes": 12,
      "tag_size_bytes": 16
    },
    "data_in_transit": {
      "tls_version_min": "TLSv1.3",
      "cipher_suites": [
        "TLS_AES_256_GCM_SHA384",
        "TLS_CHACHA20_POLY1305_SHA256"
      ],
      "certificate_validation": true,
      "ocsp_stapling": true
    },
    "asymmetric": {
      "algorithm": "RSA-4096",
      "padding": "OAEP-SHA256",
      "key_rotation_days": 90
    }
  },
  "password_policy": {
    "hashing_algorithm": "Argon2id",
    "time_cost": 3,
    "memory_cost_kb": 65536,
    "parallelism": 4,
    "salt_length_bytes": 32,
    "hash_length_bytes": 32
  },
  "key_management": {
    "storage_backend": "HSM", // Options: "HSM", "encrypted_file", "cloud_kms"
    "hsm_provider": "AWS_CloudHSM", // or "Azure_KeyVault", "HashiCorp_Vault"
    "backup_strategy": "shamir_secret_sharing",
    "shamir_threshold": 3,
    "shamir_shares": 5,
    "auto_rotation_enabled": true,
    "rotation_interval_days": 90,
    "emergency_key_regen_on_compromise": true
  },
  "audit_and_logging": {
    "log_level": "INFO",
    "sensitive_data_masking": true,
    "retain_logs_days": 365,
    "immutable_audit_trail": true,
    "real_time_alert_on_privileged_access": true
  },
  "threat_protection": {
    "rate_limiting": {
      "enabled": true,
      "max_requests_per_minute": 100,
      "burst_allowance": 10
    },
    "input_sanitization": {
      "xss_protection": true,
      "sql_injection_prevention": "parameterized_queries_only",
      "allowed_content_types": [
        "text/plain",
        "application/json",
        "audio/wav",
        "audio/mpeg",
        "video/mp4"
      ]
    },
    "anomaly_detection": {
      "enabled": true,
      "model_type": "isolation_forest",
      "retrain_interval_hours": 24,
      "alert_threshold": 0.85
    }
  },
  "compliance": {
    "gdpr_enabled": true,
    "pci_dss_enabled": true,
    "hipaa_enabled": false,
    "soc2_type": "Type II",
    "data_residency_regions": ["EU", "US"],
    "right_to_erasure_supported": true
  },
  "secure_boot": {
    "verify_integrity_on_startup": true,
    "require_signed_config": true,
    "signature_algorithm": "Ed25519"
  }
}