{
  "$schema": "https://ai-freelance-automation.com/schemas/platform_config_v1.json",
  "platform": {
    "name": "freelance_ru",
    "display_name": "Freelance.ru",
    "version": "2.1.0",
    "enabled": true,
    "base_url": "https://freelance.ru",
    "api_endpoints": {
      "jobs_feed": "https://freelance.ru/api/v2/jobs/feed",
      "job_details": "https://freelance.ru/api/v2/jobs/{job_id}",
      "submit_bid": "https://freelance.ru/api/v2/bids",
      "messages": "https://freelance.ru/api/v2/messages",
      "profile": "https://freelance.ru/api/v2/profile"
    },
    "auth": {
      "type": "session_cookie",
      "login_url": "https://freelance.ru/login",
      "requires_2fa": false,
      "auto_login": true
    },
    "scraping": {
      "use_api_fallback": true,
      "rate_limit_delay_sec": 3,
      "max_retries": 3,
      "user_agent_rotation": true,
      "proxy_required": false
    },
    "job_filters": {
      "categories": ["transcription", "translation", "copywriting", "editing"],
      "min_budget_rub": 300,
      "max_competition_ratio": 0.7,
      "exclude_keywords": ["срочн", "дешев", "срочно дешево", "за 100 руб"]
    },
    "bid_strategy": {
      "default_price_multiplier": 1.15,
      "auto_negotiate": true,
      "max_price_deviation_percent": 20,
      "template_version": "v3"
    },
    "communication": {
      "response_timeout_hours": 24,
      "auto_accept_terms": true,
      "require_contract_confirmation": true
    },
    "monitoring": {
      "health_check_interval_sec": 300,
      "alert_on_api_breakage": true,
      "log_level": "INFO"
    },
    "metadata": {
      "last_updated": "2026-01-26T00:00:00Z",
      "maintainer": "AI Freelance Automation Core Team",
      "compatibility": {
        "min_core_version": "1.4.0",
        "recommended_plugins": ["freelance_ru_parser_v2", "ru_nlp_enhancer"]
      }
    }
  }
}